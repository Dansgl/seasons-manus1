{
  "installCommand": "pnpm install --no-frozen-lockfile",
  "buildCommand": "pnpm run build:frontend",
  "outputDirectory": "dist/public",
  "functions": {
    "api/handler.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/handler" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
